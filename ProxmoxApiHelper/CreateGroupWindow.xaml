<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ProxmoxApiHelper.CreateGroupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProxmoxApiHelper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="CreateGroupWindow">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create Group" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Group ID:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="GroupIdTextBox" Width="200"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Comment:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="CommentTextBox" Width="200"/>
        </StackPanel>

        <Button Grid.Row="3" Content="Create" Click="CreateButton_Click" HorizontalAlignment="Right" Margin="0,20,0,0"/>
    </Grid>
</Window>
